{% extends 'base.html.twig' %}

{% block title %}
{{ title }}
{% endblock %}

{% block body %}
{% for category in categories %}
<h3>{{ category.name }}</h3>
    <p>{{ category.description }}</p>
    <a href="{{ path("category_show", {'slug': category.slug}) }}">Open Category</a>
    <hr>
{% endfor %}
{% endblock %}

